<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.zentasks.controller.MainController"
            stylesheets="@../style/style.css">

    <left>
        <VBox fx:id="filterVBox" spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20; -fx-background-color: #f5f5f5;">
            <Label text="Filters" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Button fx:id="allButton" text="All" onAction="#filterAll" styleClass="filter-button"/>
            <Button fx:id="activeButton" text="Active" onAction="#filterActive" styleClass="filter-button"/>
            <Button fx:id="completedButton" text="Completed" onAction="#filterCompleted" styleClass="filter-button"/>
            <Button fx:id="highPriorityButton" text="High Priority" onAction="#filterHighPriority" styleClass="filter-button"/>
        </VBox>
    </left>

    <top>
        <HBox spacing="20" styleClass="topbar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="ZenTasks" styleClass="app-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="addBtn" text="+ Add Task" styleClass="add-btn" onAction="#addTask"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" styleClass="task-list" fx:id="taskListVBox">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Your Tasks" styleClass="section-title"/>

            <VBox spacing="10" fx:id="placeholderTasks">
                <HBox spacing="10" styleClass="task-card">
                    <CheckBox fx:id="taskCheckBox1"/>
                    <VBox>
                        <Label text="Finish ZenTasks UI" styleClass="task-title"/>
                        <Label text="Due: 2025-10-05 • Priority: HIGH" styleClass="task-meta"/>
                    </VBox>
                </HBox>

                <HBox spacing="10" styleClass="task-card">
                    <CheckBox fx:id="taskCheckBox2"/>
                    <VBox>
                        <Label text="Write documentation" styleClass="task-title"/>
                        <Label text="Due: 2025-10-10 • Priority: MEDIUM" styleClass="task-meta"/>
                    </VBox>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
